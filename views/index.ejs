<!doctype html>
<html lang='en'>
<head>
  <meta charset='utf-8'>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <title>Socket io : group chating</title>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous'>
  <style>
    * {
      margin: 0%;
      padding: 0%;
      box-sizing: border-box;
    }

    html,
    body {
      height: 100%;
      width: 100%;
    }
  </style>
</head>

<body>

  <div id="main" class="w-100 h-100 d-flex justify-content-center align-items-center ">
    
    <input type="text" placeholder="enter a message">
    <button type="submit">send</button>
  
  </div>

  <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3' crossorigin='anonymous'></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    var socket = io();
    document.querySelector("button").addEventListener("click",function(dets){
       var message = document.querySelector("input").value;
        socket.emit(`sony`,message );
    })
   
   socket.on(`max`, msg=>{
     alert(`message from server ${msg}`);
   })
  </script>
  
</body>

</html>